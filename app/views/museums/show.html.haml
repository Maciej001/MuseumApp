.container
	%h1= @museum.name
	- if @museum.paintings.any?
		%table.museums
			%tbody
				%tr
					%th Museum
					%th Painting
					%th Year 
					%th Artist
					%th Image
				= render partial: "paintings/painting", collection: @museum.paintings
	- else
		%h2 No paintings
	
	= link_to "Add New Painting", new_museum_painting_path(@museum), class: "btn btn-yellow btn-small" 

	.home-links
		= link_to "Museums", museums_path, class: "home-museums"
		= link_to "Artists", artists_path, class: "home-artists"
		= link_to "Paintings", paintings_path, class: "home-paintings"

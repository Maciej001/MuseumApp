%h1= "#{@artist.name} (#{@artist.born}-#{@artist.died})"

- if @artist.paintings
	%table.museum
		%tbody
			%tr
				%th Painting
				%th Year 
				%th Image
				%th Museum
			= render partial: "painting", collection: @artist.paintings
- else
	%h2 No paintings

= link_to "Add Painting", new_painting_path, class: "btn btn-yellow btn-small"

= render 'static_pages/home_links'